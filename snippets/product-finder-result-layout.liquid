<div class="final-step-container mx-auto flex flex-col items-start gap-4 md:flex-row md:items-center md:gap-10">
  {% render "product-finder-step-layout" %}
</div>

<section class="hidden results-wrapper items-center py-12 md:py-16 lg:py-20 w-full">
  <div class="container mx-auto max-w-3xl px-4 flex flex-col gap-4 md:gap-8">
    {% if parent_quiz.collect_email %}
      <div id="quiz-contact" class="flex hidden flex-col items-center">
        <p class="text-center text-lg mb-4">{{ parent_quiz.email_text }}</p>
        {% render 'newsletter-form'
          , button_label: 'Save your results'
          , id: section.id %}
      </div>
    {% endif %}

    <div class="hidden results-container">
      {% render 'image'
        , class: 'h-[40vh] lg:h-[20rem] aspect-[5/3]'
        , image: parent_quiz.image %}
      <h2 class="max-w-xl scroll-m-20 text-4xl font-medium tracking-tight lg:text-5xl">
        {{ parent_quiz.heading }}
      </h2>
      <p class="max-w-prose text-lg text-gray-500">
        {{ parent_quiz.body }}
      </p>
      <div class="results"></div>

    </div>

  </div>
</section>