<div class="final-step-container transition-opacity duration-500 mx-auto flex flex-col items-start gap-4 md:flex-row md:items-center md:gap-10">
  {% render "product-finder-step-layout" %}
</div>

<section class="opacity-0 transition-opacity duration-500 absolute -z-10 top-0 left-0 results-wrapper items-center py-12 md:py-16 lg:py-20 w-full">
  <div class="container mx-auto max-w-3xl px-4 flex flex-col gap-4 md:gap-8">
    {% if parent_quiz.collect_email %}
      <div id="quiz-contact" class="flex hidden flex-col items-center">
        <p class="text-center text-lg mb-4">{{ parent_quiz.email_text }}</p>
        {% render 'newsletter-form'
          , button_label: 'Save your results'
          , id: section.id %}
      </div>
    {% endif %}

    <div class="hidden results-container">
      {% render 'image'
        , class: 'h-[40vh] lg:h-[20rem] aspect-[5/3]'
        , image: parent_quiz.image %}
      <h2 class="max-w-xl scroll-m-20 text-4xl font-medium tracking-tight lg:text-5xl">
        {{ parent_quiz.heading }}
      </h2>
      <p class="max-w-prose text-lg text-gray-500">
        {{ parent_quiz.body }}
      </p>
      <div class="results">

        <noscript>
          <ul class="grid grid-cols-2 gap-4 md:grid-cols-3 list-none" role="list">
            {% for recommendation in parent_quiz.empty_results.value.products limit: 6 %}
              <li>
                <div class="flex flex-col p-3 rounded-md bg-white border border-gray-200">
                  {% render 'image'
                    , image: recommendation.featured_image %}
                  <div class="flex flex-col gap-1 mt-4">
                    <h3 class="font-medium line-clamp-1">{{ recommendation.title }}</h3>
                    <p class="text-gray-500 mb-2">{{ recommendation.price | money }}</p>
                    {% form 'product'
                      , recommendation %}
                      <input
                        type="hidden"
                        name="id"
                        value="{{ recommendation.first_available_variant.id }}">
                      <button class="inline-flex items-center justify-center px-4 h-11 font-medium rounded-sm text-white bg-black transition-opacity disabled:opacity-60 disabled:cursor-not-allowed w-full " name="add">
                        Add to cart
                      </button>
                    {% endform %}
                  </div>
                </div>
              </li>
            {% endfor %}
          </ul>
          <div class="flex justify-center">

            <a href="{{ routes.root_url }}" class="inline-flex items-center justify-center px-4 h-11 font-medium rounded-sm text-white bg-black mt-4">
              Go back to the homepage
            </a>
          </div>
        </noscript>
      </div>

    </div>

  </div>
</section>